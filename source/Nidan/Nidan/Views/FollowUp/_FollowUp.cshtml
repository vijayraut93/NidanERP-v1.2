@model Nidan.Models.FollowUpViewModel
<div class="form-control-required-example"> = Required</div>
<br />
<br />
@*@Html.HiddenFor(m => m.FollowUp.IntrestedCourseId)*@
@{
    var email = Model?.FollowUp?.Enquiry?.EmailId;
    var mobile = Model?.FollowUp?.Enquiry?.Mobile ?? Model?.FollowUp?.Mobile;

}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Mobile</button>
                </span>
                <input type="text" disabled="disabled" value="@mobile" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Email</button>
                </span>
                <input type="text" disabled="disabled" value="@email" class="form-control col-lg-4">
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="col-lg-12">
            <div class="input-group">
                @if (Model.FollowUp.FollowUpType == "Enquiry" || Model.FollowUp.FollowUpType == "Mobilization")
                {
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-dark">Interested Course(s)</button>
                    </span>
                    foreach (var course in Model.Courses)
                    {
                        <input type="text" disabled="disabled" value="@course.Text" class="form-control col-lg-4">
                    }
                }
                else
                {
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-dark">Course Offered</button>
                    </span>
                    foreach (var course in Model.Courses)
                    {
                        <input type="text" disabled="disabled" value="@course.Text" class="form-control col-lg-4">
                    }
                }

            </div>
        </div>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.FollowUp.FollowUpDateTime, new { @class = "control-label col-md-4 col-sm-3 col-xs-12" })
    <div class="col-md-4 col-sm-6 col-xs-12 dob">
        @Html.TextBoxFor(model => model.FollowUp.FollowUpDateTime, "{0:dd MMMM yyyy}", new { @class = "form-control col-md-7 col-xs-12 date" })
        @Html.ValidationMessageFor(model => model.FollowUp.FollowUpDateTime, "", new { @class = "help-block" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.FollowUp.Remark, new { @class = "control-label col-md-4 col-sm-3 col-xs-12" })
    <div class="col-md-4 col-sm-6 col-xs-12">
        @Html.EditorFor(model => model.FollowUp.Remark, new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.FollowUp.Remark, "", new { @class = "help-block" })
    </div>
</div>
