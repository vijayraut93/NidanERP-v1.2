    
<div class="modal fade" id="centreFixAssetModal" ng-hide="model.ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Assign Asset</h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label id="labelPaymentMode" class="control-label col-md-3 col-sm-3 col-xs-12">Room</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="dropDownRoom" class="form-control col-md-7 col-sm-6 col-xs-12">
                                    <option>Select Room</option>
                                    <option data-ng-repeat="t in model.rooms" ng-model="model.roomId" value="{{t.RoomId}}">{{t.Description}}</option>
                                </select>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Date of Use</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtDateofUse" type="text" class="form-control date" />
                                </div>
                                <br />
                                <br />
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Remarks</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtRemarks" type="text" class="form-control" />
                                </div>
                                <br />
                                <br />
                            </div>

                        </div>

                        <div class="modal-footer">
                            <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                <div class="form-group">
                                    <div class="control-label col-md-14 col-sm-14 col-xs-12">
                                        <div class="pull-right col-md-12">
                                            <div class="col-md-9">
                                                <button type="submit" id="btnSaveCentreFixAsset" ng-click="model.markAsset()" class="btn btn-success" data-dismiss="modal">Assign</button>
                                            </div>
                                            <div class="pull-right col-md-3">
                                                <button type="button" id="btnCancel" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


