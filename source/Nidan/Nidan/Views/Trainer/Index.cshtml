@using Nidan.Extensions
@{
    ViewBag.Title = "Trainer";
}
<div ng-controller="TrainerController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Trainers  <small></small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchTrainer(searchField)" class="form-control" placeholder="Search for trainer...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" ng-click="model.searchTrainer(searchField)" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    @if (User.IsInAnyRoles("Admin"))
    {
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-success btn-lg" href="@Url.Action("Create", "Trainer")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                @*<div class="x_title">
                        <h2>
                            Trainers <small></small>
                        </h2>
                        <div class="clearfix"></div>
                    </div>*@
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            @if (User.IsInAnyRoles("SuperAdmin"))
                                            {
                                                <th>Centre</th>
                                            }
                                            <th ng-click="model.order('LastName')" ng-class="model.orderClass('LastName')">Candidate Name</th>
                                            <th ng-click="model.order('Mobile')" ng-class="model.orderClass('Mobile')">Mobile</th>
                                            <th ng-click="model.order('Sector.Name')" ng-class="model.orderClass('Sector.Name')">Sector</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="trainer in model.trainers" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewTrainer(trainer.TrainerId)">
                                            @if (User.IsInAnyRoles("SuperAdmin"))
                                            {
                                                <td><span ng-bind="trainer.Centre.Name"></span></td>
                                            }
                                            <td><span ng-bind="trainer.Title"></span> <span ng-bind="trainer.FirstName"></span> <span ng-bind="trainer.MiddleName"></span> <span ng-bind="trainer.LastName"></span></td>
                                            <td><span ng-bind="trainer.Mobile"></span></td>
                                            <td><span ng-bind="trainer.Sector.Name"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        @if (User.IsInAnyRoles("Admin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/Trainer/Edit/{{trainer.TrainerId}}">
                                                                    Edit
                                                                </a>
                                                            </li>
                                                        }
                                                        @if (User.IsInAnyRoles("Admin", "SuperAdmin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/Trainer/View/{{trainer.TrainerId}}">
                                                                    View
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
