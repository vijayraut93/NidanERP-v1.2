@model Nidan.Models.CandidateFeeViewModel


@Html.HiddenFor(model => model.CandidateFee.CandidateFeeId)
@Html.HiddenFor(model => model.CandidateFee.CandidateInstallmentId)
<div class="modal fade" id="candidateFeeModal" ng-hide="model.ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Payment Details</h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label id="labelAmount" class="control-label col-md-3 col-sm-3 col-xs-12">Amount</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtAmount" class="form-control" readonly="readonly" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                            <label id="labelPaymentMode" class="control-label col-md-3 col-sm-3 col-xs-12">Payment Mode</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="dropDownPaymentMode" class="form-control col-md-7 col-sm-6 col-xs-12">
                                    <option>Select Payment Mode</option>
                                    <option data-ng-repeat="t in model.paymentModes" ng-model="model.paymentModeId" value="{{t.PaymentModeId}}">{{t.Name}}</option>
                                </select>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                            @*<label class="control-label col-md-3 col-sm-6 col-xs-12"></label>*@
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <label class="btn btn-info pull-right col-md-7">
                                    @*@Html.CheckBoxFor(model => model.CandidateFee.IsPaidAmountOverride, new { @class = "col-md-2 col-xs-12", autocomplete = "off" })*@
                                    <input id="overrideFeeCheckbox" type="checkbox" />
                                    Override Fee
                                </label>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                            @*<label class="control-label col-md-3 col-sm-6 col-xs-12"></label>*@
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <label class="btn btn-info pull-right col-md-7">
                                    @*@Html.CheckBoxFor(model => model.CandidateFee.IsPaidAmountOverride, new { @class = "col-md-2 col-xs-12", autocomplete = "off" })*@
                                    <input id="haveReceiptCheckbox" type="checkbox" />
                                    Already Taken Payment
                                </label>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div id="haveReceiptDiv" class="form-group">
                            @*@Html.LabelFor(model => model.CandidateFee.PaidAmount, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })*@
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Receipt Number</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtReceiptNumber" type="text" class="form-control" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div id="overrideFeeDiv" class="form-group">
                            @*@Html.LabelFor(model => model.CandidateFee.PaidAmount, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })*@
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Paid Amount</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtPaidAmount" type="text" class="form-control" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div id="chequeDetailDiv">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Cheque Number</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtChequeNumber" type="text" class="form-control" />
                                </div>
                                <br />
                                <br />
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Cheque Date</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtChequeDate" type="text" class="form-control date" />
                                </div>
                                <br />
                                <br />
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Bank Name</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtBankName" type="text" class="form-control" />
                                </div>
                                <br />
                                <br />
                            </div>

                        </div>

                        <div class="modal-footer">
                            <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                <div class="form-group">
                                    <div class="control-label col-md-14 col-sm-14 col-xs-12">
                                        <div class="pull-right col-md-12">
                                            <div class="col-md-9">
                                                <button type="submit" id="btnSaveCandidateFee" ng-click="model.saveFee()" class="btn btn-success" disabled="disabled" data-dismiss="modal"><i class="fa fa-credit-card"></i>Assign</button>
                                            </div>
                                            <div class="pull-right col-md-3">
                                                <button type="button" id="btnCancel" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

