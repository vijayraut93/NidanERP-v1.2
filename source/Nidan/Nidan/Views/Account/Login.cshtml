@model Nidan.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_OutsideLayout.cshtml";
}
<section class="login_content">
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h1>Login</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*<div class="form-group">
            @Html.TextBoxFor(m => m.OrganisationId, new { @class = "form-control", @placeholder = "OrganisationId" })
            @Html.ValidationMessageFor(m => m.OrganisationId, "", new { @class = "text-danger" })
        </div>*@
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div>
            <button type="submit" class="btn btn-default submit">Submit</button>
            @Html.ActionLink("Lost your password?", "ForgotPassword", "Account", null, new { @class = "reset_pass" })
        </div>
    }
</section>