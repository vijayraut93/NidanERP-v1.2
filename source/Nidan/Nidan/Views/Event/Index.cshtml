@using Nidan.Extensions
@{
    ViewBag.Title = "Events";
}
<div ng-controller="EventController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Events <small></small>
            </h3>
        </div>
    </div>
    @if (User.IsInAnyRoles("Admin","SuperAdmin"))
    {
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-success btn-lg" href="@Url.Action("Create", "Event")">
                    <i class="fa fa-calendar-minus-o"></i> Create
                </a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                @*<div class="x_title">
                    <h2>
                        Events <small></small>
                    </h2>
                    <div class="clearfix"></div>
                </div>*@
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th ng-click="model.order('Name')" ng-class="model.orderClass('Name')">Name</th>
                                            @*@if (User.IsInAnyRoles("Admin","SuperAdmin"))
                                            {*@
                                                <th>Actions</th>
                                            @*}*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="event in model.events" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.editEvent(event.EventId)">
                                            <td><span ng-bind="event.Name"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        @if (User.IsInAnyRoles("Admin","SuperAdmin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/Event/Edit/{{event.EventId}}">
                                                                    Edit
                                                                </a>
                                                            </li>

                                                            <li>
                                                                <a style="cursor: pointer;" ng-bootbox-confirm="Are you sure, you want to delete Event {{event.Name}}" ng-bootbox-confirm-action="model.deleteEvent(event.EventId)" ng-bootbox-confirm-action-cancel="" ng-click="$event.originalEvent.ngClickHandled = true;">
                                                                    Delete
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<div class="modal fade" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Confirmation</h2>
                </div>
                <div class="modal-body">
                    <input type="hidden" ng-model='model.AbsenceTypeId' />
                    Are you sure, you want to delete absence type <span ng-bind="model.AbsenceTypeName"></span> ?
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="model.modalOk()" id="btnOK" class="btn btn-success" style="margin-bottom: 0">Ok</button>
                    <button type="button" id="btnCancel" class="btn btn-success" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>*@
</div>
