@using Nidan.Extensions

<div class="modal fade" id="trainerDocumentModal" ng-hide="model.ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Create Documents</h2>
            </div>
            <div class="modal-body">
                <div class="form-group" ng-show="model.Errors.length > 0">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="validation-summary-errors row alert alert-error" data-valmsg-summary="false">
                                <ul class="errors">
                                    <li ng-repeat="error in model.Errors"><span ng-bind="error"></span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                @*<div class="form-group">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Document Type</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select ng-model="model.documentTypeId" class="form-control col-md-7 col-xs-12">
                                    <option data-ng-repeat="t in model.documentsType" ng-model="model.documentTypeId" value="{{t.DocumentTypeId}}">{{t.Name}}</option>
                                </select>
                            </div>
                        </div>
                    </div>*@


                <div class="form-group">
                    <div class="row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">File</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="file" file-model="model.documentFile" class="form-control required" accept=".txt,.pdf,.doc,.docx,.xls,.xlsx,.jpg,.png,.gif" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                    <div class="form-group">
                        <div class="pull-right col-md-7">
                            <div class="col-md-3">
                                <button type="button" class="btn btn-success" ng-click="model.createTrainerDocument(@Model.Trainer.TrainerId.ToString())" data-dismiss="modal">Save</button>
                            </div>
                            <div class="pull-right col-md-6">
                                <button type="button" id="btnCancel" class="btn btn-success" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="documentDiv">
    <div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Trainer Documents<small></small>
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-xs-12">
                                    <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                        <thead>
                                            <tr role="row">
                                                <th ng-click="model.order('DocumentType')" ng-class="model.orderClass('DocumentType')">Document Type</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="documentsType in model.trainerDocuments" class="odd gradeX">
                                                <td><span ng-bind="documentsType.Name"></span></td>
                                                <td>
                                                    <button ng-if="!documentsType.IsPending" type="button" class="btn btn-round btn-success btn-xs">Uploaded</button>
                                                    <button ng-if="documentsType.IsPending" type="button" class="btn btn-round btn-danger btn-xs">Pending</button>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-warning btn-xs" ng-click="model.removeError(documentsType.DocumentTypeId)" data-toggle="modal" data-target="#trainerDocumentModal">Upload Document</button>
                                                    <a style="cursor: pointer;" ng-if="!documentsType.IsPending" ng-href="/Trainer/DownloadDocument/{{documentsType.Guid}}" class="btn btn-success btn-xs">
                                                        Download
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <label ng-bind="model.searchMessage"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
