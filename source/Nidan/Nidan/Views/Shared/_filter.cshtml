<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 xs-mb-15">
        Filter Companies:
        <ui-select multiple tagging ng-model="model.companies" class="form-control" ng-change="model.filterSelected()" style="width:100%" ng-disabled="model.organisationalChartViewModel.PersonnelDetailFilter.Company.length <= 1">
            <ui-select-match placeholder="Select Company"><span class="square" ng-style="{'background-color' : '#' + $item.Hex }"></span> <span ng-bind-html="$item.Name"></span></ui-select-match>
            <ui-select-choices repeat="Company in model.organisationalChartViewModel.PersonnelDetailFilter.Company | filter:$select.search">
                <span class="square" ng-style="{'background-color' : '#' + Company.Hex }"></span> <span ng-bind-html="Company.Name"></span>
            </ui-select-choices>
        </ui-select>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 xs-mb-15">
        Filter Departments:
